# =============================================================================
# Hytale Server Configuration (Minimal)
# =============================================================================
# Copy this file to .env and customize as needed
# =============================================================================

# --- JVM Memory ---
# Minimum 4GB recommended, adjust based on available RAM
JAVA_XMS=4G
JAVA_XMX=8G

# --- Server Settings ---
# Port for QUIC protocol (UDP)
SERVER_PORT=5520

# Game version: release, pre-release, etc.
PATCHLINE=release

# Enable AOT cache for faster startup
ENABLE_AOT=true

# Disable crash reporting to Hytale
DISABLE_SENTRY=false

# --- Backup Settings ---
# Enable automatic backups
ENABLE_BACKUP=false
# Backup interval in minutes
BACKUP_FREQUENCY=30

# --- Plugin Settings ---
# Accept early-stage plugins (development)
ACCEPT_EARLY_PLUGINS=false
# Allow /op commands
ALLOW_OP=false

# --- Resource Limits ---
# Docker memory limits
MEMORY_LIMIT=10G
MEMORY_RESERVATION=4G

# --- Timezone ---
TZ=UTC

# --- Hosting Provider Mode (Optional) ---
# Pre-inject tokens to skip OAuth flow
# HYTALE_SERVER_SESSION_TOKEN=
# HYTALE_SERVER_IDENTITY_TOKEN=
# HYTALE_OWNER_UUID=
