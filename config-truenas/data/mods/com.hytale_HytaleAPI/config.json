{
  "enabled": true,
  "port": 8080,
  "bindAddress": "0.0.0.0",
  "tls": {
    "enabled": false,
    "certPath": "cert.pem",
    "keyPath": "key.pem",
    "keyPassword": null
  },
  "jwt": {
    "issuer": "hytale-api",
    "audience": "hytale-server",
    "tokenValiditySeconds": 3600,
    "refreshTokenValiditySeconds": 86400,
    "rsaKeyPath": "jwt-keypair.pem",
    "algorithm": "RS256"
  },
  "clients": [
    {
      "id": "hyos-manager",
      "secret": "$2b$12$oESmAhQakc/k1bGIuuOXherW8egiBJebuzeuiX/6HLVWp39E4ON5K",
      "description": "HyOS Server Manager client",
      "permissions": ["api.*"],
      "enabled": true
    }
  ],
  "rateLimits": {
    "defaultRequestsPerMinute": 60,
    "burstSize": 10,
    "endpoints": {
      "/auth/token": {
        "requestsPerMinute": 10,
        "burstSize": 3
      },
      "/admin/*": {
        "requestsPerMinute": 30,
        "burstSize": 5
      }
    }
  },
  "cors": {
    "allowedOrigins": ["*"],
    "allowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allowedHeaders": ["Authorization", "Content-Type", "X-Request-ID"],
    "exposedHeaders": ["X-Request-ID", "X-RateLimit-Remaining"],
    "allowCredentials": true,
    "maxAge": 86400
  },
  "websocket": {
    "enabled": true,
    "path": "/ws",
    "maxConnections": 100,
    "pingIntervalSeconds": 30,
    "statusBroadcastIntervalSeconds": 5
  },
  "audit": {
    "enabled": true,
    "logRequests": true,
    "logResponses": false,
    "logAdminActions": true,
    "sensitiveFields": ["secret", "password", "token", "authorization"]
  }
}
