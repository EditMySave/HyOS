# =============================================================================
# Hytale Server Configuration (Enterprise)
# =============================================================================
# Copy this file to .env and customize as needed
# Full reference: All 40+ server options exposed
# =============================================================================

# --- Container Settings ---
CONTAINER_NAME=hytale-server
VOLUME_NAME=hytale-enterprise-data
UID=1000
GID=1000
TZ=UTC

# --- JVM Memory ---
JAVA_XMS=4G
JAVA_XMX=8G
# Additional JVM options (e.g., -XX:+PrintGCDetails)
JAVA_OPTS=
# Additional -XX options
JVM_XX_OPTS=

# --- Garbage Collector ---
# Use G1GC (default, recommended for most cases)
USE_G1GC=true
# Use ZGC (alternative, ultra-low latency for large heaps)
USE_ZGC=false
# G1GC settings
G1_MAX_PAUSE=200
G1_NEW_SIZE_PERCENT=
G1_MAX_NEW_SIZE_PERCENT=
G1_HEAP_REGION_SIZE=
# ZGC settings
ZGC_INTERVAL=5

# --- Server Settings ---
SERVER_PORT=5520
PATCHLINE=release
ENABLE_AOT=true
AUTO_UPDATE=false

# --- Config Generation ---
# Set to true to skip config.json generation (use existing file)
SKIP_CONFIG_GENERATION=false
# Full JSON override (if set, ignores individual settings below)
HYTALE_CONFIG_JSON=

# Individual config.json settings
SERVER_NAME=Hytale Server
SERVER_MOTD=
SERVER_PASSWORD=
MAX_PLAYERS=100
MAX_VIEW_RADIUS=32
DEFAULT_WORLD=default
DEFAULT_GAMEMODE=Adventure
LOCAL_COMPRESSION=false
DISPLAY_TMP_TAGS=false
PLAYER_STORAGE_TYPE=Hytale

# --- Whitelist ---
WHITELIST_ENABLED=false
# Comma-separated player UUIDs
WHITELIST_LIST=
# Full JSON override
WHITELIST_JSON=

# --- Hytale Server CLI Options ---
# Accept early-stage plugins
HYTALE_ACCEPT_EARLY_PLUGINS=false
# Allow /op commands
HYTALE_ALLOW_OP=false
# Auth mode: authenticated or offline
HYTALE_AUTH_MODE=
# Backup settings
HYTALE_BACKUP=false
HYTALE_BACKUP_DIR=
HYTALE_BACKUP_FREQUENCY=30
HYTALE_BACKUP_MAX_COUNT=
# Bare mode
HYTALE_BARE=false
# Boot command
HYTALE_BOOT_COMMAND=
# Disable features
HYTALE_DISABLE_ASSET_COMPARE=false
HYTALE_DISABLE_CPB_BUILD=false
HYTALE_DISABLE_FILE_WATCHER=false
HYTALE_DISABLE_SENTRY=false
# Early plugins path
HYTALE_EARLY_PLUGINS=
# Debug
HYTALE_EVENT_DEBUG=false
# Network
HYTALE_FORCE_NETWORK_FLUSH=
# Schema
HYTALE_GENERATE_SCHEMA=false
# Logging
HYTALE_LOG=
# World migration
HYTALE_MIGRATE_WORLDS=
HYTALE_MIGRATIONS=
# Mods path
HYTALE_MODS=
# Owner
HYTALE_OWNER_NAME=
# Cache
HYTALE_PREFAB_CACHE=
# Validation
HYTALE_SHUTDOWN_AFTER_VALIDATE=false
HYTALE_VALIDATE_ASSETS=false
HYTALE_VALIDATE_PREFABS=
HYTALE_VALIDATE_WORLD_GEN=false
# Singleplayer
HYTALE_SINGLEPLAYER=false
# Transport
HYTALE_TRANSPORT=
# Universe
HYTALE_UNIVERSE=
# World generation
HYTALE_WORLD_GEN=
# Extra arguments (appended to command)
HYTALE_EXTRA_ARGS=

# --- Token Injection (Hosting Provider Mode) ---
# Set these to skip OAuth flow entirely
HYTALE_SERVER_SESSION_TOKEN=
HYTALE_SERVER_IDENTITY_TOKEN=
HYTALE_OWNER_UUID=

# --- Resource Limits ---
CPU_LIMIT=4
CPU_RESERVATION=2
MEMORY_LIMIT=10G
MEMORY_RESERVATION=4G

# --- Debug ---
DEBUG=false
NO_COLOR=false
